{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run EmailEZ API",
      "type": "shell",
      "command": "dotnet",
      "args": ["run", "--project", "EmailEZ.Api"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "EF: Add Migration",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "ef",
        "migrations",
        "add",
        "${input:migrationName}",
        "--project",
        "EmailEZ.Infrastructure",
        "--startup-project",
        "EmailEZ.Api"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "EF: Update Database",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "ef",
        "database",
        "update",
        "--project",
        "EmailEZ.Infrastructure",
        "--startup-project",
        "EmailEZ.Api"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "EF: List Migrations",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "ef",
        "migrations",
        "list",
        "--project",
        "EmailEZ.Infrastructure",
        "--startup-project",
        "EmailEZ.Api"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "EF: Remove Last Migration",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "ef",
        "migrations",
        "remove",
        "--project",
        "EmailEZ.Infrastructure",
        "--startup-project",
        "EmailEZ.Api"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "EF: Generate Script",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "ef",
        "migrations",
        "script",
        "--project",
        "EmailEZ.Infrastructure",
        "--startup-project",
        "EmailEZ.Api",
        "--output",
        "migration-script.sql"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Build Solution",
      "type": "shell",
      "command": "dotnet",
      "args": ["build"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Clean Solution",
      "type": "shell",
      "command": "dotnet",
      "args": ["clean"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Restore Packages",
      "type": "shell",
      "command": "dotnet",
      "args": ["restore"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Install EF Tools",
      "type": "shell",
      "command": "dotnet",
      "args": ["tool", "install", "--global", "dotnet-ef"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ],
  "inputs": [
    {
      "id": "migrationName",
      "description": "Enter migration name",
      "default": "NewMigration",
      "type": "promptString"
    }
  ]
}
